{
  "version": "0.2.0",
  "configurations": [
    {
      // Run the current Python file with CWD fixed to the project root
      "name": "Python: Current File (root cwd)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      // Run pytest from the project root (F5)
      "name": "Pytest (root cwd)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
